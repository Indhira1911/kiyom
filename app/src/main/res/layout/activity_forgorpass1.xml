<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgorpass1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.v7ench.kiyo.Forgotpass1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#26306f"
        android:layout_alignParentTop="true"
        android:id="@+id/fpback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/forgot_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fpback">

        <TextView
            android:text="We just need your registered Mobile Number \n to send you password reset code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#919191"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/forgotlen"
            android:orientation="horizontal"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="13dp"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_smartphone"
                android:id="@+id/imageView31" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="12"
                android:maxLength="10"
                android:id="@+id/editText"
                android:layout_gravity="center"
                android:hint="Registered Mobile Number"
                android:textSize="18sp"
                android:typeface="normal"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:text="Forgot Password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:textColor="#2d2d2d"
            android:layout_marginTop="16dp"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_checked"
            android:id="@+id/fpsend"
            app:elevation="13dp"
            android:layout_below="@+id/forgotlen"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Back to Sign Up  Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/backi"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/fpsend"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />


    </RelativeLayout>

</RelativeLayout>
