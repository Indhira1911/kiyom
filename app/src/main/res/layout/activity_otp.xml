<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_Otpme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.v7ench.kiyo.OtpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#26306f"
        android:layout_alignParentTop="true"
        android:id="@+id/fpback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/alpha_otp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView3" />
    </RelativeLayout>

    <TextView
        android:text="Verification Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterotp"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/fpback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Otp_message"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textAlignment="center"
        android:layout_below="@+id/enterotp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Please type the verification code sent to you." />

    <TextView
        android:text="RESEND CODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/otprequest"
        android:layout_toRightOf="@+id/otprequest"
        android:layout_toEndOf="@+id/otprequest" />

    <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="1234"
        android:textAlignment="center"
            android:id="@+id/otpnumber"
            android:fontFamily="sans-serif"
            android:typeface="normal"
            android:maxLength="4"
        android:padding="5dp"
            android:textSize="20sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/Otp_message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Didn`t receive the OTP?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otprequest"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/otpsend"
        android:layout_alignRight="@+id/otpsend"
        android:layout_alignEnd="@+id/otpsend" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_checked"
        android:id="@+id/otpsend"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/otpnumber"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


