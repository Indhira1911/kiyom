<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about__us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f5f9"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.v7ench.kiyo.About_Us"
    tools:showIn="@layout/activity_about_us">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/lock_new"
        android:layout_marginTop="24dp"
        android:id="@+id/imageView19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
       android:id="@+id/mycard1"
        android:layout_below="@+id/textView16"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="About Alpha Safe"
                android:layout_weight="2"
                android:padding="20dp"
                android:textColor="#2d2d2d"
                android:textSize="18sp"/>
            <ImageButton
                android:id="@+id/tstma"
                android:background="?android:selectableItemBackground"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"

        android:layout_below="@+id/mycard1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terms and Conditions"
                android:layout_weight="2"
                android:padding="20dp"
                android:textColor="#2d2d2d"
                android:textSize="18sp"/>
            <ImageButton
                android:id="@+id/termacon"
                android:background="?android:selectableItemBackground"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALPHA SAFE"
        android:textSize="25sp"
        android:layout_below="@+id/imageView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView16" />
</RelativeLayout>
