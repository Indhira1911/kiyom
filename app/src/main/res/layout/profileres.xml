<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:clipToPadding="false">


    <TextView
         android:text="0.0"
            android:padding="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/circle2_text_view_black"
            android:textColor="#2d2d2d"
            android:textStyle="bold|normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:padding="5dp"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold|normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/safep"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/ratings"
        android:layout_alignBottom="@+id/ratings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/safep"
        android:layout_alignLeft="@+id/safep"
        android:layout_alignStart="@+id/safep" />

    <TextView
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold|normal"
       android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/ratings"
        android:layout_alignBottom="@+id/ratings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Unsafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tty8"
        android:layout_below="@+id/textView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>