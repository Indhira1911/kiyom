<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/norm_list">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bconte"
        android:layout_margin="2dp"
        android:layout_gravity="center_vertical"
        android:textColor="#2d2d2d"
        android:textSize="15sp"
        android:text="Content"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView17"
        android:layout_toEndOf="@+id/imageView17" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttime"
        android:padding="2dp"
        android:paddingLeft="5dp"
        android:visibility="gone"
        android:layout_below="@+id/bconte"
        android:layout_alignBaseline="@+id/btdate"
        android:layout_alignBottom="@+id/btdate"
        android:layout_toRightOf="@+id/btdate"
     />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btdate"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/imageView17"
        android:layout_alignLeft="@+id/bconte"
        android:layout_alignStart="@+id/bconte" />

    <ImageView
        android:layout_width="40dp"
        android:foregroundGravity="center_vertical"
        android:layout_height="40dp"
        app:srcCompat="@drawable/circle_main"
        android:id="@+id/imageView17"
        android:layout_alignTop="@+id/bconte"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_alert_circle_outline"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView18" />


</RelativeLayout>